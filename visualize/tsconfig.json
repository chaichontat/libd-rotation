{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "module": "es2022",
    "lib": ["es2021", "DOM"],
    "target": "es2021",
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "$src/*": ["src/*"],
      "$comps/*": ["src/components/*"],
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]
}
